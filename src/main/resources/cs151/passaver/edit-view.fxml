                <PasswordField fx:id="confirmPasswordField" layoutX="249.0" layoutY="332.0" prefHeight="26.0" prefWidth="224.0" promptText="Leave empty to not change password" />
                <TextField fx:id="passwordDisplay" editable="false" layoutX="249.0" layoutY="204.0" prefHeight="26.0" prefWidth="160.0" promptText="Password Generated" />
                <Button layoutX="499.0" layoutY="360.0" mnemonicParsing="false" onMouseClicked="#cancelUpdate" style="-fx-background-color: lightgreen; -fx-border-width: 2; -fx-border-color: black;" text="Cancel" />
            </children>
        </Pane>
        <Label layoutX="44.0" layoutY="31.0" text="Passaver">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="55.0" layoutY="84.0" prefHeight="35.0" prefWidth="689.0" textFill="RED" />
    </children>
</AnchorPane>
