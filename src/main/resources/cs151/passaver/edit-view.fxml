<AnchorPane fx:id="editPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: lightcyan; -fx-border-color: black; -fx-border-width: 2;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="cs151.passaver.EditController">
    <children>
        <Pane layoutX="54.0" layoutY="130.0" prefHeight="416.0" prefWidth="691.0" style="-fx-background-color: lightblue;">
            <children>
                <Button layoutX="567.0" layoutY="360.0" mnemonicParsing="false" onMouseClicked="#updateAccount" style="-fx-background-color: lightgreen; -fx-border-width: 2; -fx-border-color: black;" text="Update Info" />
                <Label layoutX="118.0" layoutY="334.0" text="Re-enter Password:" />
                <CheckBox fx:id="capitalLetterCheckBox" layoutX="439.0" layoutY="288.0" mnemonicParsing="false" text="Include Capital Letters" />
                <CheckBox fx:id="specialCharacterCheckbox" layoutX="252.0" layoutY="288.0" mnemonicParsing="false" text="Include Special Character" />
                <CheckBox fx:id="clipboardCheckbox" layoutX="547.0" layoutY="209.0" mnemonicParsing="false" onMouseClicked="#copyToClipBoard" text="Copy  to Clipboard" />
                <Label layoutX="168.0" layoutY="251.0" text="Password:" />
                <TextField fx:id="expirationDateField" disable="true" layoutX="250.0" layoutY="162.0" />
                <Label layoutX="137.0" layoutY="167.0" text="Expiration Date:" />
                <Label layoutX="142.0" layoutY="125.0" text="Creation Date:" />
                <TextField fx:id="usernameField" layoutX="250.0" layoutY="85.0" />
                <Label layoutX="159.0" layoutY="90.0" text="Username:" />
                <TextField fx:id="emailField" layoutX="250.0" layoutY="49.0" />
                <Label layoutX="189.0" layoutY="56.0" text="Email:" />
                <TextField fx:id="appNameField" layoutX="250.0" layoutY="16.0" />
                <Label layoutX="99.0" layoutY="23.0" text="Website or App Name: " />
                <TextField fx:id="creationDateField" disable="true" layoutX="249.0" layoutY="120.0" />
                <Button layoutX="460.0" layoutY="204.0" mnemonicParsing="false"  onMouseClicked="#generatePassword" prefHeight="27.0" prefWidth="77.0" text="Generate" />
